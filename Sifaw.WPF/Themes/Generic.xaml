<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Sifaw.WPF">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Sifaw.WPF;component/Themes/TextFilterControl.xaml" />
        <ResourceDictionary Source="/Sifaw.WPF;component/Themes/BoolFilterControl.xaml" />
        <ResourceDictionary Source="/Sifaw.WPF;component/Themes/ListFilterControl.xaml" />
        <ResourceDictionary Source="/Sifaw.WPF;component/Themes/EnumFilterControl.xaml" />
        <ResourceDictionary Source="/Sifaw.WPF;component/Themes/DropDownListFilterControl.xaml" />
        <ResourceDictionary Source="/Sifaw.WPF;component/Themes/TabHostControl.xaml" />
    </ResourceDictionary.MergedDictionaries>
    

    <Style TargetType="{x:Type local:TableControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TableControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
